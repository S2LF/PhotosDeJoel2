{% extends 'base.html.twig' %}

{% block title %}Les Photos de Joël | Admin - Liens{% endblock %}

{% block body %}

{% include "admin/adminNav.html.twig" %}

<h2 class="text-center">Gestion des liens</h2>
<div class="container">
  {% if liens|length == 0 %}
  <section>
    <h3 class="text-center">
      Aucun lien
    </h3>
  </section>
  {% else %}
  <section class="draggable">
    {% for lien in liens %}
    <article class="m-3" data-id="{{ lien.id }}">
    <div class="rounded border p-2">
        <div class="d-flex align-items-center">
          <h3>{{lien.title}}&nbsp;<a href="{{ path('admin_link_edit', {'id':lien.id})}}"><i
                class="fas fa-pen-square text-warning"></i></a>&nbsp;<a onclick="return confirm('Êtes-vous sûre de vouloir supprimer cet élément ?')" href="{{ path('admin_link_delete', {'id':lien.id, 'hardDelete':0})}}"><i class="fas fa-minus-square text-danger"></i></a>

            <small>&nbsp;-&nbsp;<a href="{{ lien.link | raw}}" target="_blank">{{ lien.link }}</a></small>
          </h3>
        </div>
        {{ lien.content|raw }}
      </div>
    </article>
    {% endfor %}
  </section>
  {% endif %}
  <div class="text-center">
    <a href="{{ path('admin_link_add') }}" class="btn btn-success">Ajouter un lien</a>
  </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}

<script>
  jQuery('.draggable').sortable({
    stop: function (event, ui) {
      let id = ui.item.attr('data-id')
      console.log("id:" + id)
      let position = ui.item.index()
      console.log("pos:" + position)
      $.post(
        "{{ path('admin_link_sort') }}",
        {
          'link_id': id,
          'position': position
        },
        function (data) {
          console.log(data)
        }
      )
    }
  })
</script>

{% endblock %}